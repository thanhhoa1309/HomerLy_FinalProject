@page
@model HomerLy.Presentation.Pages.User.Tenancies.IndexModel
@{
    ViewData["Title"] = "My Tenancies";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<div class="container-fluid animate-fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <div>
            <h2 class="h3 mb-1 fw-bold">My Tenancies</h2>
            <p class="text-muted mb-0">Manage your rental agreements</p>
        </div>
        <a asp-page="/User/Dashboard" class="btn btn-outline-secondary rounded-pill btn-sm">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="card glass-card border-0">
        <div class="card-header bg-transparent border-bottom-0 pt-4 px-4">
            <ul class="nav nav-pills card-header-pills bg-light d-inline-flex p-1 rounded-pill" id="tenancyTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active rounded-pill px-4" id="active-tab" data-bs-toggle="tab" href="#active" role="tab">
                        <i class="bi bi-check-circle me-2"></i>Active & Pending
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link rounded-pill px-4" id="history-tab" data-bs-toggle="tab" href="#history" role="tab">
                        <i class="bi bi-clock-history me-2"></i>History
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body p-4">
            <div class="tab-content" id="tenancyTabsContent">
                <!-- Active & Pending Tab -->
                <div class="tab-pane fade show active" id="active" role="tabpanel">
                    @if (Model.ActiveTenancies != null && Model.ActiveTenancies.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle table-borderless table-hover">
                                <thead class="bg-light text-muted small text-uppercase fw-bold">
                                    <tr>
                                        <th class="ps-4 rounded-start">Property</th>
                                        <th>Owner</th>
                                        <th>Period</th>
                                        <th>Status</th>
                                        <th class="text-end pe-4 rounded-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tenancy in Model.ActiveTenancies)
                                    {
                                        <tr class="border-bottom">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center py-2">
                                                    <div class="bg-white p-2 rounded border me-3 shadow-sm text-primary">
                                                        <i class="bi bi-building fs-4"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 fw-bold text-dark">@tenancy.PropertyTitle</h6>
                                                        <small class="text-muted"><i class="bi bi-geo-alt me-1"></i>@tenancy.PropertyAddress</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-light text-secondary me-2 small fw-bold" style="width: 30px; height: 30px;">
                                                        @tenancy.OwnerName.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <span>@tenancy.OwnerName</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column small">
                                                    <span class="text-success fw-bold"><i class="bi bi-calendar-check me-2"></i>@tenancy.StartDate.ToString("MMM dd, yyyy")</span>
                                                    <span class="text-muted ms-4 ps-1 border-start border-2 my-1">to</span>
                                                    <span class="text-danger"><i class="bi bi-calendar-x me-2"></i>@tenancy.EndDate.ToString("MMM dd, yyyy")</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (tenancy.Status == Homerly.BusinessObject.Enums.TenancyStatus.active)
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">
                                                       <i class="bi bi-check-circle-fill me-1"></i> Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3 py-2">
                                                        <i class="bi bi-hourglass-split me-1"></i> Pending
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group">
                                                    <a href="#" class="btn btn-sm btn-light border shadow-sm text-muted" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (tenancy.Status == Homerly.BusinessObject.Enums.TenancyStatus.pending_confirmation && !tenancy.IsTenantConfirmed)
                                                    {
                                                        <a href="#" class="btn btn-sm btn-success shadow-sm ms-2 rounded" title="Confirm Tenancy">
                                                            <i class="bi bi-check-lg me-1"></i>Confirm
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <div class="d-inline-block bg-primary bg-opacity-10 p-4 rounded-circle text-primary">
                                    <i class="bi bi-house-door fs-1 opacity-50"></i>
                                </div>
                            </div>
                            <h5 class="text-muted fw-bold">No active tenancies</h5>
                            <p class="text-muted mb-4">You don't have any ongoing rental agreements.</p>
                            <a asp-page="/User/Properties/Index" class="btn btn-primary rounded-pill px-4 shadow-sm">Browse Properties to Rent</a>
                        </div>
                    }
                </div>

                <!-- History Tab -->
                <div class="tab-pane fade" id="history" role="tabpanel">
                    @if (Model.HistoryTenancies != null && Model.HistoryTenancies.Any())
                    {
                        <div class="table-responsive">
                            <table class="table align-middle table-borderless table-hover">
                                <thead class="bg-light text-muted small text-uppercase fw-bold">
                                    <tr>
                                        <th class="ps-4 rounded-start">Property</th>
                                        <th>Owner</th>
                                        <th>Period</th>
                                        <th>Status</th>
                                        <th class="text-end pe-4 rounded-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tenancy in Model.HistoryTenancies)
                                    {
                                        <tr class="border-bottom">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center py-2 opacity-75">
                                                     <div class="bg-light p-2 rounded border me-3 text-muted">
                                                        <i class="bi bi-building fs-4"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 fw-bold text-dark">@tenancy.PropertyTitle</h6>
                                                        <small class="text-muted">@tenancy.PropertyAddress</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-muted">@tenancy.OwnerName</td>
                                            <td class="text-muted small">
                                                @tenancy.StartDate.ToString("MMM dd, yyyy") - @tenancy.EndDate.ToString("MMM dd, yyyy")
                                            </td>
                                            <td>
                                                @if (tenancy.Status == Homerly.BusinessObject.Enums.TenancyStatus.expired)
                                                {
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3 py-2">Expired</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3 py-2">Cancelled</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4">
                                                <a href="#" class="btn btn-sm btn-light border shadow-sm text-muted">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                             <div class="mb-4">
                                <div class="d-inline-block bg-secondary bg-opacity-10 p-4 rounded-circle text-secondary">
                                    <i class="bi bi-clock-history fs-1 opacity-50"></i>
                                </div>
                            </div>
                            <h5 class="text-muted fw-bold">No history</h5>
                             <p class="text-muted">You have no past rental history.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
