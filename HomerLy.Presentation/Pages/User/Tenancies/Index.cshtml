@page
@using Homerly.BusinessObject.Enums
@model HomerLy.Presentation.Pages.User.Tenancies.IndexModel
@{
    ViewData["Title"] = "My Tenancies";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<style>
    /* Minimalist Black & White Theme */
    .stat-card-wrapper {
        display: flex;
        gap: 24px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }

    .stat-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 24px;
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        min-width: 0;
        flex: 1 1 200px;
    }

    .stat-card-content h3 {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        line-height: 1;
    }

    .stat-card-content p {
        font-size: 0.8125rem;
        color: #6c757d;
        margin: 4px 0 0 0;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        color: #1a1a1a;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .badge-active {
        background: #1a1a1a !important;
        color: #fff !important;
    }

    .badge-pending {
        background: #f5f5f5 !important;
        color: #1a1a1a !important;
        border: 1px solid #e5e5e5 !important;
    }

    .badge-expired {
        background: #fff !important;
        color: #666 !important;
        border: 1px solid #e5e5e5 !important;
    }

    .badge-cancelled {
        background: #666 !important;
        color: #fff !important;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .user-info-box {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .user-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: #1a1a1a;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .property-info .fw-medium {
        display: block;
        margin-bottom: 2px;
    }

    .property-info small {
        color: #6c757d;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .table tbody td,
    .table thead th {
        vertical-align: middle;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .stat-card-wrapper {
            flex-direction: column;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <div>
            <h2 class="h4 mb-1 fw-semibold">
                <i class="bi bi-file-text me-2"></i>My Tenancies
            </h2>
            <p class="text-secondary mb-0" style="font-size: 0.875rem;">Manage your rental agreements</p>
        </div>
        <a asp-page="/User/Dashboard" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="stat-card-wrapper">
        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@(Model.ActiveTenancies?.Count ?? 0)</h3>
                <p>Active Tenancies</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-check-circle"></i>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@(Model.ActiveTenancies?.Count(t => t.Status == TenancyStatus.pending_confirmation) ?? 0)</h3>
                <p>Pending Confirmation</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-hourglass-split"></i>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@(Model.HistoryTenancies?.Count ?? 0)</h3>
                <p>History</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-clock-history"></i>
            </div>
        </div>
    </div>

    <!-- Active & Pending Tenancies -->
    <div class="card mb-4">
        <div class="card-header">
            <h6 class="mb-0 fw-semibold"><i class="bi bi-file-text me-2"></i>Active & Pending Tenancies</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Owner</th>
                            <th>Period</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ActiveTenancies != null && Model.ActiveTenancies.Any())
                        {
                            @foreach (var tenancy in Model.ActiveTenancies)
                            {
                                <tr>
                                    <td class="property-info">
                                        <div class="fw-medium">@tenancy.PropertyTitle</div>
                                        <small class="text-muted">@tenancy.PropertyAddress</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <span class="ms-2">@tenancy.OwnerName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div>@tenancy.StartDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted d-block">to @tenancy.EndDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (tenancy.Status == TenancyStatus.active)
                                        {
                                            <span class="badge badge-active">Active</span>
                                        }
                                        else if (tenancy.Status == TenancyStatus.pending_confirmation)
                                        {
                                            <span class="badge badge-pending">Pending</span>
                                            @if (!tenancy.IsTenantConfirmed)
                                            {
                                                <span class="badge badge-pending mt-1 d-block">
                                                    <i class="bi bi-exclamation-circle me-1"></i>Action Required
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge badge-expired">@tenancy.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons btn-group-sm">
                                            <a asp-page="/User/Tenancies/Details" asp-route-id="@tenancy.Id"
                                                class="btn btn-sm btn-outline-dark" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (tenancy.Status == TenancyStatus.active)
                                            {
                                                <a href="/Chat/Tenancy/@tenancy.Id" class="btn btn-sm btn-primary" title="Open Chat"
                                                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                                    <i class="bi bi-chat-dots-fill"></i>
                                                </a>
                                            }
                                            @if (tenancy.Status == TenancyStatus.pending_confirmation &&
                                                                                !tenancy.IsTenantConfirmed)
                                            {
                                                <a asp-page="/User/Tenancies/Details" asp-route-id="@tenancy.Id"
                                                    class="btn btn-sm btn-dark" title="Confirm">
                                                    <i class="bi bi-check-lg"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-secondary">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No active or pending tenancies
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- History -->
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0 fw-semibold"><i class="bi bi-clock-history me-2"></i>History</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Owner</th>
                            <th>Period</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.HistoryTenancies != null && Model.HistoryTenancies.Any())
                        {
                            @foreach (var tenancy in Model.HistoryTenancies)
                            {
                                <tr style="opacity: 0.7;">
                                    <td class="property-info">
                                        <div class="fw-medium">@tenancy.PropertyTitle</div>
                                        <small class="text-muted">@tenancy.PropertyAddress</small>
                                    </td>
                                    <td>@tenancy.OwnerName</td>
                                    <td>
                                        <small class="text-muted">
                                            @tenancy.StartDate.ToString("MMM dd, yyyy") - @tenancy.EndDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @if (tenancy.Status == TenancyStatus.expired)
                                        {
                                            <span class="badge badge-expired">Expired</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-cancelled">Cancelled</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="/User/Tenancies/Details" asp-route-id="@tenancy.Id"
                                            class="btn btn-sm btn-outline-dark" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-secondary">
                                    <i class="bi bi-clock-history fs-1 d-block mb-2"></i>
                                    No history available
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>