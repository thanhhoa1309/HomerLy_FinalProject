@page
@model HomerLy.Presentation.Pages.User.Invoices.DetailsModel
@{
    ViewData["Title"] = "Invoice Details";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<style>
    .invoice-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .invoice-header {
        background: #1a1a1a;
        color: #ffffff;
        padding: 32px 24px;
        border-radius: 8px 8px 0 0;
    }

    .invoice-body {
        background: #ffffff;
        border: 1px solid #e9ecef;
        border-top: none;
        border-radius: 0 0 8px 8px;
        padding: 24px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .info-label {
        color: #6c757d;
        font-weight: 500;
        flex: 1;
    }

    .info-value {
        color: #1a1a1a;
        font-weight: 600;
        text-align: right;
    }

    .info-sublabel {
        display: block;
        font-size: 0.8125rem;
        color: #adb5bd;
        margin-top: 2px;
    }

    .total-section {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-top: 24px;
        border: 2px solid #1a1a1a;
    }

    .section-divider {
        border-top: 2px solid #e9ecef;
        margin: 20px 0;
    }

    .utility-usage {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 2px 8px;
        background: #f8f9fa;
        border-radius: 4px;
        font-size: 0.8125rem;
        margin-top: 4px;
    }
</style>

<div class="container-fluid invoice-container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
        </div>
        <div class="text-center mt-3">
            <a asp-page="/User/Invoices/Index" class="btn btn-dark">
                <i class="bi bi-arrow-left me-2"></i>Back to Invoices
            </a>
        </div>
    }

    @if (Model.Invoice != null)
    {
        <div class="invoice-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h2 class="mb-2">Invoice #@Model.Invoice.Id.ToString().Substring(0, 8).ToUpper()</h2>
                    <p class="mb-0">@Model.Invoice.PropertyTitle</p>
                    <small style="opacity: 0.8;">@Model.Invoice.PropertyAddress</small>
                </div>
                <div class="text-end">
                    @if (Model.Invoice.Status == HomerLy.BusinessObject.Enums.InvoiceStatus.paid)
                    {
                        <span class="badge bg-success" style="padding: 8px 16px; font-size: 0.875rem;">
                            <i class="bi bi-check-circle me-1"></i>Paid
                        </span>
                    }
                    else if (Model.Invoice.Status == HomerLy.BusinessObject.Enums.InvoiceStatus.overdue)
                    {
                        <span class="badge bg-danger" style="padding: 8px 16px; font-size: 0.875rem;">
                            <i class="bi bi-exclamation-triangle me-1"></i>Overdue
                        </span>
                    }
                    else if (Model.Invoice.Status == HomerLy.BusinessObject.Enums.InvoiceStatus.draft)
                    {
                        <span class="badge bg-secondary" style="padding: 8px 16px; font-size: 0.875rem;">
                            <i class="bi bi-file-earmark me-1"></i>Draft
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark" style="padding: 8px 16px; font-size: 0.875rem;">
                            <i class="bi bi-hourglass-split me-1"></i>Pending
                        </span>
                    }
                </div>
            </div>
        </div>

        <div class="invoice-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="fw-bold mb-3"><i class="bi bi-calendar-range me-2"></i>Billing Period</h6>
                    <p class="mb-1">
                        <i class="bi bi-calendar3 me-2"></i>
                        @Model.Invoice.BillingPeriodStart.ToString("MMM dd, yyyy") - @Model.Invoice.BillingPeriodEnd.ToString("MMM dd, yyyy")
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <h6 class="fw-bold mb-3"><i class="bi bi-calendar-event me-2"></i>Due Date</h6>
                    <p class="mb-1">
                        <i class="bi bi-calendar-check me-2"></i>
                        @Model.Invoice.DueDate.ToString("MMM dd, yyyy")
                    </p>
                </div>
            </div>

            <div class="section-divider"></div>

            <h6 class="fw-bold mb-3"><i class="bi bi-receipt-cutoff me-2"></i>Charges Breakdown</h6>

            <div class="info-row">
                <div class="info-label">
                    <i class="bi bi-house-door text-primary me-2"></i>
                    <strong>Monthly Rent</strong>
                </div>
                <div class="info-value">₫@Model.Invoice.MonthlyRentPrice.ToString("N0")</div>
            </div>

            <div class="info-row">
                <div class="info-label">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>
                    <strong>Electricity</strong>
                    <span class="info-sublabel">
                        Usage: @Model.Invoice.ElectricOldIndex → @Model.Invoice.ElectricNewIndex kWh 
                        (@(Model.Invoice.ElectricNewIndex - Model.Invoice.ElectricOldIndex) kWh × ₫@Model.Invoice.ElectricUnitPrice.ToString("N0")/kWh)
                    </span>
                </div>
                <div class="info-value">₫@Model.Invoice.ElectricCost.ToString("N0")</div>
            </div>

            <div class="info-row">
                <div class="info-label">
                    <i class="bi bi-droplet text-info me-2"></i>
                    <strong>Water</strong>
                    <span class="info-sublabel">
                        Usage: @Model.Invoice.WaterOldIndex → @Model.Invoice.WaterNewIndex m³ 
                        (@(Model.Invoice.WaterNewIndex - Model.Invoice.WaterOldIndex) m³ × ₫@Model.Invoice.WaterUnitPrice.ToString("N0")/m³)
                    </span>
                </div>
                <div class="info-value">₫@Model.Invoice.WaterCost.ToString("N0")</div>
            </div>

            @if (Model.Invoice.OtherFees > 0)
            {
                <div class="info-row">
                    <div class="info-label">
                        <i class="bi bi-plus-circle me-2"></i>
                        <strong>Other Fees</strong>
                    </div>
                    <div class="info-value">₫@Model.Invoice.OtherFees.ToString("N0")</div>
                </div>
            }

            <div class="total-section">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-calculator me-2"></i>Total Amount</h4>
                    <h3 class="mb-0 text-dark">₫@Model.Invoice.TotalAmount.ToString("N0")</h3>
                </div>
            </div>

            @if (Model.Invoice.Status == HomerLy.BusinessObject.Enums.InvoiceStatus.paid && Model.Invoice.PaymentDate.HasValue)
            {
                <div class="alert alert-success mt-4">
                    <i class="bi bi-check-circle me-2"></i>
                    <strong>Payment Received</strong><br/>
                    Paid on @Model.Invoice.PaymentDate.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                </div>
            }
            else if (Model.Invoice.Status == HomerLy.BusinessObject.Enums.InvoiceStatus.draft)
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Draft Invoice</strong><br/>
                    This invoice is in draft status and has not been sent yet. Please wait for the owner to finalize and send it.
                </div>
            }
            else if (Model.Invoice.Status == HomerLy.BusinessObject.Enums.InvoiceStatus.overdue)
            {
                <div class="alert alert-danger mt-4">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Payment Overdue</strong><br/>
                    This invoice is past its due date. Please pay as soon as possible to avoid penalties.
                </div>
            }

            <div class="mt-4 d-flex gap-2">
                <a asp-page="/User/Invoices/Index" class="btn btn-outline-dark">
                    <i class="bi bi-arrow-left me-2"></i>Back to Invoices
                </a>
                @if (Model.Invoice.Status != HomerLy.BusinessObject.Enums.InvoiceStatus.paid && Model.Invoice.Status != HomerLy.BusinessObject.Enums.InvoiceStatus.draft)
                {
                    <a asp-page="/Payment/PayInvoice" asp-route-invoiceId="@Model.Invoice.Id"
                       class="btn btn-success btn-lg flex-grow-1">
                        <i class="bi bi-credit-card me-2"></i>Pay ₫@Model.Invoice.TotalAmount.ToString("N0") via Stripe
                    </a>
                }
            </div>
        </div>
    }
</div>