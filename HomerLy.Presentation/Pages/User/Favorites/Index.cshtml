@page
@model HomerLy.Presentation.Pages.User.Favorites.IndexModel
@{
    ViewData["Title"] = "My Favorites";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<div class="container-fluid animate-fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <div>
            <h2 class="h3 mb-1 fw-bold">My Favorites</h2>
            <p class="text-muted mb-0">Saved properties you love</p>
        </div>
        <a asp-page="/User/Properties/Index" class="btn btn-primary rounded-pill shadow-sm">
            <i class="bi bi-search me-2"></i>Browse More
        </a>
    </div>

    <!-- Empty State for now until backend is implemented -->
    <div class="card glass-card border-0">
        <div class="card-body py-5">
            <div class="text-center py-5">
                <div class="mb-4">
                    <div class="d-inline-block p-5 rounded-circle bg-danger bg-opacity-10 text-danger">
                        <i class="bi bi-heart-fill fs-1"></i>
                    </div>
                </div>
                <h4 class="text-muted fw-bold">No favorites yet</h4>
                <p class="text-muted mb-4">You haven't saved any properties to your favorites lists.</p>
                <a asp-page="/User/Properties/Index" class="btn btn-outline-primary rounded-pill px-4">
                    Start Exploring
                </a>
            </div>
        </div>
    </div>
</div>
