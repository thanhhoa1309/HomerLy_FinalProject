@page
@model HomerLy.Presentation.Pages.User.DashboardModel
@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<div class="container-fluid animate-fade-in-up">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-5 mt-3">
        <div>
            <h2 class="h3 mb-1 fw-bold">User Dashboard</h2>
            <p class="text-muted mb-0">Welcome back, <span
                    class="text-primary fw-bold">@Model.CurrentUser?.FullName</span>!</p>
        </div>
        <div class="text-muted bg-white px-4 py-2 rounded-pill shadow-sm border">
            <i class="bi bi-calendar-event me-2 text-primary"></i>@DateTime.Now.ToString("dddd, MMMM dd, yyyy")
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-5 g-4">
        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-success h-100">
                <i class="bi bi-house-check icon-bg"></i>
                <div class="card-body">
                    <h6 class="text-white-50 mb-3 text-uppercase small ls-1">Active Tenancies</h6>
                    <h2 class="mb-0 fw-bold display-5">0</h2> <!-- Placeholder for Model.ActiveTenanciesCount -->
                    <small class="text-white-50 mt-2 d-block">Current Homes</small>
                </div>
                <div class="card-footer bg-white bg-opacity-10 border-0">
                    <a asp-page="/User/Tenancies/Index"
                        class="text-white text-decoration-none d-flex align-items-center justify-content-between stretched-link">
                        <span>View Details</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-primary h-100">
                <i class="bi bi-heart icon-bg"></i>
                <div class="card-body">
                    <h6 class="text-white-50 mb-3 text-uppercase small ls-1">Favorites</h6>
                    <h2 class="mb-0 fw-bold display-5">0</h2> <!-- Placeholder -->
                    <small class="text-white-50 mt-2 d-block">Saved Properties</small>
                </div>
                <div class="card-footer bg-white bg-opacity-10 border-0">
                    <a asp-page="/User/Favorites/Index"
                        class="text-white text-decoration-none d-flex align-items-center justify-content-between stretched-link">
                        <span>View Favorites</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-warning h-100">
                <i class="bi bi-credit-card icon-bg"></i>
                <div class="card-body">
                    <h6 class="text-white-50 mb-3 text-uppercase small ls-1">Pending Payments</h6>
                    <h2 class="mb-0 fw-bold display-5">0</h2> <!-- Placeholder -->
                    <small class="text-white-50 mt-2 d-block">Due Soon</small>
                </div>
                <div class="card-footer bg-white bg-opacity-10 border-0">
                    <a asp-page="/User/Payments/Index"
                        class="text-white text-decoration-none d-flex align-items-center justify-content-between stretched-link">
                        <span>View Payments</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card bg-info h-100">
                <i class="bi bi-cash-stack icon-bg"></i>
                <div class="card-body">
                    <h6 class="text-white-50 mb-3 text-uppercase small ls-1">Total Spent</h6>
                    <h2 class="mb-0 fw-bold display-5">0 â‚«</h2> <!-- Placeholder -->
                    <small class="text-white-50 mt-2 d-block">Lifetime Rent</small>
                </div>
                <div class="card-footer bg-white bg-opacity-10 border-0">
                    <a asp-page="/User/Payments/History"
                        class="text-white text-decoration-none d-flex align-items-center justify-content-between stretched-link">
                        <span>View History</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Content Column -->
        <div class="col-lg-8">
            <!-- Quick Search -->
            <div class="card glass-card mb-5">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-lightning-fill me-2"></i>Quick Search</h5>
                </div>
                <div class="card-body">
                    <form asp-page="/User/Properties/Index" method="get" class="row g-3">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="search" placeholder="Search..."
                                    name="search">
                                <label for="search">Location or Name</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                <select class="form-select" id="type" name="type">
                                    <option value="">Any</option>
                                    <option value="Apartment">Apartment</option>
                                    <option value="House">House</option>
                                    <option value="Studio">Studio</option>
                                </select>
                                <label for="type">Type</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                <select class="form-select" id="price" name="priceRange">
                                    <option value="">Any</option>
                                    <option value="0-5000000">Under 5M</option>
                                    <option value="5000000-10000000">5M - 10M</option>
                                    <option value="10000000+">Above 10M</option>
                                </select>
                                <label for="price">Price</label>
                            </div>
                        </div>
                        <div class="col-md-2 d-flex align-items-center">
                            <button type="submit"
                                class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-center">
                                <i class="bi bi-search me-2"></i>Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Featured Properties -->
            <div class="card glass-card mb-4">
                <div class="card-header border-0 bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-star-fill me-2"></i>Featured Properties</h5>
                    <a asp-page="/User/Properties/Index" class="btn btn-sm btn-outline-primary rounded-pill px-3">Browse
                        All</a>
                </div>
                <div class="card-body">
                    <!-- Example Empty State with improved visuals -->
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <div class="d-inline-block bg-primary bg-opacity-10 p-4 rounded-circle text-primary">
                                <i class="bi bi-building fs-1"></i>
                            </div>
                        </div>
                        <h5 class="text-muted fw-bold">Fresh Properties Coming Soon</h5>
                        <p class="text-muted mb-4">We are curating the best homes for you.</p>
                        <a asp-page="/User/Properties/Index" class="btn btn-primary px-4 rounded-pill shadow-sm">Start
                            Your Search</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar / Profile Summary -->
        <div class="col-lg-4">
            <!-- Profile Card -->
            <div class="card glass-card mb-4 text-center">
                <div class="card-body p-5">
                    @if (Model.CurrentUser != null)
                    {
                        <div class="position-relative d-inline-block mb-3">
                            <div class="avatar-circle bg-gradient text-white mx-auto shadow-sm"
                                style="width: 100px; height: 100px; font-size: 2.5rem; background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); display:flex; align-items:center; justify-content:center; border-radius:50%;">
                                @Model.CurrentUser.FullName?.Substring(0, 1).ToUpper()
                            </div>
                            <span
                                class="position-absolute bottom-0 end-0 p-2 bg-success border border-white rounded-circle"></span>
                        </div>
                        <h4 class="mb-1 fw-bold">@Model.CurrentUser.FullName</h4>
                        <p class="text-muted mb-3">@Model.CurrentUser.Email</p>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill mb-4">Verified
                            Tenant</span>

                        <div class="d-grid gap-2">
                            <a asp-page="/User/Profile" class="btn btn-outline-primary rounded-pill">
                                <i class="bi bi-pencil me-2"></i>Edit Profile
                            </a>
                        </div>

                        <div class="row mt-4 pt-3 border-top">
                            <div class="col-6 border-end">
                                <small class="text-muted d-block text-uppercase"
                                    style="font-size:0.7rem; letter-spacing:1px;">Phone</small>
                                <span class="fw-bold text-dark">@Model.CurrentUser.Phone</span>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block text-uppercase"
                                    style="font-size:0.7rem; letter-spacing:1px;">Member Since</small>
                                <span class="fw-bold text-dark">@DateTime.Now.Year</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Support / Help -->
            <div class="card glass-card">
                <div class="card-header border-0 bg-transparent">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-life-preserver me-2"></i>Help Center</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-4">Questions about your lease or payments? We're here to help you
                        24/7.</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-info text-white rounded-pill shadow-sm">
                            <i class="bi bi-headset me-2"></i>Contact Support
                        </a>
                        <a href="#" class="btn btn-light text-muted border rounded-pill">
                            <i class="bi bi-journal-text me-2"></i>View User Guide
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

