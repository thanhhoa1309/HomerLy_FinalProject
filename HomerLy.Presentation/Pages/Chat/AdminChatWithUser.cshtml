@page
@model HomerLy.Presentation.Pages.Chat.AdminChatWithUserModel
@{
    ViewData["Title"] = $"Chat with {Model.UserName}";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    var adminId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --primary-color: #667eea;
            --primary-dark: #5568d3;
            --secondary-color: #764ba2;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        .chat-container {
            height: calc(100vh - 150px);
            display: flex;
            flex-direction: column;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .chat-header {
            background: var(--primary-gradient);
            color: white;
            padding: 1.5rem 2rem;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .chat-header-user {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: white;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .chat-header-info h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
        }

        .chat-header-info p {
            margin: 0;
            font-size: 0.875rem;
            opacity: 0.9;
        }

        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 2rem;
            background: var(--gray-50);
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .message-wrapper {
            display: flex;
            animation: messageSlideIn 0.3s ease-out;
        }

        @@keyframes messageSlideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message-wrapper.sent {
            justify-content: flex-end;
        }

        .message-wrapper.received {
            justify-content: flex-start;
        }

        .message {
            max-width: 70%;
            padding: 0.875rem 1.25rem;
            border-radius: 16px;
            position: relative;
            word-wrap: break-word;
        }

        .message.sent {
            background: var(--primary-gradient);
            color: white;
            border-bottom-right-radius: 4px;
        }

        .message.received {
            background: white;
            color: var(--gray-900);
            border-bottom-left-radius: 4px;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

        .message-sender {
            font-weight: 600;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            opacity: 0.9;
        }

        .message.received .message-sender {
            color: var(--primary-color);
        }

        .message-text {
            margin: 0;
            line-height: 1.5;
        }

        .message-time {
            font-size: 0.75rem;
            opacity: 0.7;
            margin-top: 0.25rem;
            display: block;
        }

        .chat-input-container {
            padding: 1.5rem 2rem;
            background: white;
            border-top: 1px solid var(--gray-200);
        }

        .typing-indicator {
            padding: 0.5rem 2rem;
            font-size: 0.875rem;
            color: var(--gray-600);
            font-style: italic;
            min-height: 2rem;
        }

        .typing-dots {
            display: inline-flex;
            gap: 0.25rem;
        }

        .typing-dot {
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background-color: var(--gray-400);
            animation: typingDot 1.4s infinite;
        }

        .typing-dot:nth-child(2) {
            animation-delay: 0.2s;
        }

        .typing-dot:nth-child(3) {
            animation-delay: 0.4s;
        }

        @@keyframes typingDot {

            0%,
            60%,
            100% {
                transform: translateY(0);
            }

            30% {
                transform: translateY(-8px);
            }
        }

        .chat-input-form {
            display: flex;
            gap: 1rem;
            align-items: flex-end;
        }

        .chat-input-wrapper {
            flex: 1;
            position: relative;
        }

        .chat-input {
            width: 100%;
            padding: 0.875rem 1.25rem;
            border: 2px solid var(--gray-200);
            border-radius: 24px;
            font-size: 1rem;
            transition: all 0.3s ease;
            resize: none;
            max-height: 120px;
            min-height: 48px;
        }

        .chat-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .chat-send-btn {
            padding: 0.875rem 2rem;
            background: var(--primary-gradient);
            color: white;
            border: none;
            border-radius: 24px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .chat-send-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
        }

        .chat-send-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--gray-500);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .back-link {
            color: white;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .back-link:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }
    </style>
}

<div class="container-fluid py-4">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>@Model.ErrorMessage</span>
        </div>
    }
    else
    {
        <div class="chat-container">
            <div class="chat-header">
                <div class="chat-header-user">
                    <div class="user-avatar">
                        @Model.UserName?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="chat-header-info">
                        <h1>@Model.UserName</h1>
                        <p>
                            <span class="badge bg-light text-dark">@Model.UserRole</span>
                            <span id="typingIndicator" class="ms-2"></span>
                        </p>
                    </div>
                </div>
                <a href="/Admin/Chats" class="back-link">
                    <i class="bi bi-arrow-left"></i> Back to Chats
                </a>
            </div>

            <div id="chatMessages" class="chat-messages">
                @if (Model.Messages.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                        <h3>No messages yet</h3>
                        <p>Start a conversation with @Model.UserName!</p>
                    </div>
                }
                else
                {
                    @foreach (var message in Model.Messages)
                    {
                        var isSent = message.SenderId.ToString() == adminId;
                        <div class="message-wrapper @(isSent ? "sent" : "received")">
                            <div class="message @(isSent ? "sent" : "received")">
                                @if (!isSent)
                                {
                                    <div class="message-sender">@message.SenderName</div>
                                }
                                <p class="message-text">@message.Message</p>
                                <small class="message-time">@message.SentAt.ToLocalTime().ToString("HH:mm")</small>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="typing-indicator" id="typingIndicatorContainer" style="display:none;">
                <span>@Model.UserName is typing</span>
                <span class="typing-dots">
                    <span class="typing-dot"></span>
                    <span class="typing-dot"></span>
                    <span class="typing-dot"></span>
                </span>
            </div>

            <div class="chat-input-container">
                <form id="chatForm" class="chat-input-form">
                    <div class="chat-input-wrapper">
                        <textarea id="messageInput" class="chat-input" placeholder="Type your message..." rows="1"
                        required></textarea>
                    </div>
                    <button type="submit" class="chat-send-btn" id="sendBtn">
                        <i class="bi bi-send-fill"></i>
                        <span>Send</span>
                    </button>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        const userId = '@Model.UserId';
        const currentAdminId = '@adminId';
        let connection;
        let isTyping = false;
        let typingTimeout;

        // Initialize SignalR connection
        async function initializeChat() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            // Message received
            connection.on("ReceiveMessage", (message) => {
                addMessage(message);
                scrollToBottom();
            });

            // Typing indicator
            connection.on("UserTyping", (data) => {
                if (data.isTyping) {
                    document.getElementById('typingIndicatorContainer').style.display = 'block';
                } else {
                    document.getElementById('typingIndicatorContainer').style.display = 'none';
                }
            });

            // Error handling
            connection.on("Error", (errorMessage) => {
                alert('Error: ' + errorMessage);
            });

            try {
                await connection.start();
                console.log("Connected to chat hub");

                // Load conversation
                await connection.invoke("LoadConversation", userId);
            } catch (err) {
                console.error("Connection error:", err);
            }
        }

        // Send message
        document.getElementById('chatForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const messageInput = document.getElementById('messageInput');
            const message = messageInput.value.trim();

            if (!message || !connection) return;

            try {
                await connection.invoke("SendMessage", userId, message);
                messageInput.value = '';
                messageInput.style.height = 'auto';
                stopTyping();
            } catch (err) {
                console.error("Send error:", err);
                alert('Failed to send message');
            }
        });

        // Auto-resize textarea
        document.getElementById('messageInput').addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';

            // Typing indicator
            if (!isTyping) {
                isTyping = true;
                connection.invoke("TypingIndicator", userId, true).catch(err => console.error(err));
            }

            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(stopTyping, 1000);
        });

        function stopTyping() {
            if (isTyping) {
                isTyping = false;
                connection.invoke("TypingIndicator", userId, false).catch(err => console.error(err));
            }
        }

        // Add message to chat
        function addMessage(message) {
            const messagesContainer = document.getElementById('chatMessages');
            const isSent = message.senderId === currentAdminId;

            const messageWrapper = document.createElement('div');
            messageWrapper.className = `message-wrapper ${isSent ? 'sent' : 'received'}`;

            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isSent ? 'sent' : 'received'}`;

            if (!isSent) {
                const senderDiv = document.createElement('div');
                senderDiv.className = 'message-sender';
                senderDiv.textContent = message.senderName;
                messageDiv.appendChild(senderDiv);
            }

            const textP = document.createElement('p');
            textP.className = 'message-text';
            textP.textContent = message.message;
            messageDiv.appendChild(textP);

            const timeSmall = document.createElement('small');
            timeSmall.className = 'message-time';
            const sentDate = new Date(message.sentAt);
            timeSmall.textContent = sentDate.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
            messageDiv.appendChild(timeSmall);

            messageWrapper.appendChild(messageDiv);
            messagesContainer.appendChild(messageWrapper);
        }

        // Scroll to bottom
        function scrollToBottom() {
            const messagesContainer = document.getElementById('chatMessages');
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            initializeChat();
            scrollToBottom();
        });
    </script>
}