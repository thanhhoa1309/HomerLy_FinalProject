@page
@model HomerLy.Presentation.Pages.Owner.Tenancies.IndexModel
@{
    ViewData["Title"] = "My Tenancies";
    Layout = "~/Pages/Shared/_OwnerLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="page-header mb-5">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="display-6 fw-bold mb-2">
                    <i class="bi bi-people-fill me-3"></i>My Tenancies
                </h1>
                <p class="text-muted fs-5 mb-0">Manage tenant agreements and rental contracts</p>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="filter-card mb-5">
        <div class="filter-header">
            <i class="bi bi-sliders me-2"></i>
            <span>Search & Filter</span>
        </div>
        <div class="filter-body">
            <form method="get" class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <label class="filter-label">
                        <i class="bi bi-funnel me-2"></i>Status
                    </label>
                    <select name="status" class="form-select form-select-lg" onchange="this.form.submit()">
                        <option value="">All Tenancies</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">
                            ✓ Active
                        </option>
                        <option value="pending_confirmation" selected="@(Model.StatusFilter == "pending_confirmation")">
                            ⏳ Pending
                        </option>
                        <option value="expired" selected="@(Model.StatusFilter == "expired")">
                            ✕ Expired
                        </option>
                        <option value="cancelled" selected="@(Model.StatusFilter == "cancelled")">
                            ⊘ Cancelled
                        </option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="filter-label">
                        <i class="bi bi-house me-2"></i>Property
                    </label>
                    <select name="propertyId" class="form-select form-select-lg" onchange="this.form.submit()">
                        <option value="">All Properties</option>
                        @if (Model.OwnerProperties != null)
                        {
                            @foreach (var property in Model.OwnerProperties)
                            {
                                <option value="@property.Id" selected="@(Model.PropertyIdFilter == property.Id)">
                                    @property.Title
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label class="filter-label">
                        <i class="bi bi-check-circle me-2"></i>Confirmation
                    </label>
                    <select name="isTenantConfirmed" class="form-select form-select-lg" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="true" selected="@(Model.IsTenantConfirmedFilter == true)">
                            Confirmed
                        </option>
                        <option value="false" selected="@(Model.IsTenantConfirmedFilter == false)">
                            Unconfirmed
                        </option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-dark btn-lg w-100 shadow-sm">
                        <i class="bi bi-search me-2"></i>Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-lg-4 col-md-6">
            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Active</p>
                    <h2 class="stat-value">@Model.ActiveCount</h2>
                    <p class="stat-desc">Currently active</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="stat-card stat-card-warning">
                <div class="stat-icon">
                    <i class="bi bi-clock-fill"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Pending</p>
                    <h2 class="stat-value">@Model.PendingCount</h2>
                    <p class="stat-desc">Awaiting confirmation</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="stat-card stat-card-danger">
                <div class="stat-icon">
                    <i class="bi bi-x-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Expired</p>
                    <h2 class="stat-value">@Model.ExpiredCount</h2>
                    <p class="stat-desc">Contract ended</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tenancies List -->
    @if (Model.Tenancies != null && Model.Tenancies.Any())
    {
        <div class="tenancies-list">
            @foreach (var tenancy in Model.Tenancies)
            {
                <div class="tenancy-card">
                    <div class="tenancy-header">
                        <div class="tenancy-property">
                            <h3 class="tenancy-property-name">
                                <i class="bi bi-house-fill me-2"></i>
                                @tenancy.PropertyTitle
                            </h3>
                            <p class="tenancy-property-address">
                                <i class="bi bi-geo-alt-fill me-2"></i>
                                @tenancy.PropertyAddress
                            </p>
                        </div>
                        <div class="tenancy-badge tenancy-badge-@(GetStatusClass(tenancy.Status))">
                            @tenancy.Status.ToString().Replace("_", " ")
                        </div>
                    </div>

                    <div class="tenancy-body">
                        <div class="row g-4">
                            <div class="col-lg-4 col-md-6">
                                <div class="tenancy-info-item">
                                    <div class="tenancy-info-label">
                                        <i class="bi bi-person-fill me-2"></i>Tenant
                                    </div>
                                    <div class="tenancy-info-value">@tenancy.TenantName</div>
                                    <div class="tenancy-info-extra">@tenancy.TenantEmail</div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="tenancy-info-item">
                                    <div class="tenancy-info-label">
                                        <i class="bi bi-calendar-check me-2"></i>Start Date
                                    </div>
                                    <div class="tenancy-info-value">@tenancy.StartDate.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6">
                                <div class="tenancy-info-item">
                                    <div class="tenancy-info-label">
                                        <i class="bi bi-calendar-x me-2"></i>End Date
                                    </div>
                                    <div class="tenancy-info-value">@tenancy.EndDate.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="tenancy-info-item">
                                    <div class="tenancy-info-label">
                                        <i class="bi bi-shield-check me-2"></i>Confirmation
                                    </div>
                                    <div class="tenancy-info-value">
                                        @if (tenancy.IsTenantConfirmed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Confirmed
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock me-1"></i>Pending
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tenancy-footer">
                        <div class="tenancy-actions">
                            <a asp-page="/Owner/Tenancies/Details" asp-route-id="@tenancy.Id" 
                               class="tenancy-btn tenancy-btn-view">
                                <i class="bi bi-eye-fill me-2"></i>View Details
                            </a>
                            @if (tenancy.Status == Homerly.BusinessObject.Enums.TenancyStatus.active || 
                                 tenancy.Status == Homerly.BusinessObject.Enums.TenancyStatus.pending_confirmation)
                            {
                                <button type="button" class="tenancy-btn tenancy-btn-cancel" 
                                        onclick="cancelTenancy('@tenancy.Id')">
                                    <i class="bi bi-x-circle-fill me-2"></i>Cancel Tenancy
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.Tenancies.TotalPages > 1)
        {
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Tenancies.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.Tenancies.CurrentPage - 1)"
                           asp-route-status="@Model.StatusFilter" 
                           asp-route-propertyId="@Model.PropertyIdFilter"
                           asp-route-isTenantConfirmed="@Model.IsTenantConfirmedFilter">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.Tenancies.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Tenancies.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-pageNumber="@i"
                               asp-route-status="@Model.StatusFilter"
                               asp-route-propertyId="@Model.PropertyIdFilter"
                               asp-route-isTenantConfirmed="@Model.IsTenantConfirmedFilter">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Tenancies.CurrentPage == Model.Tenancies.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.Tenancies.CurrentPage + 1)"
                           asp-route-status="@Model.StatusFilter"
                           asp-route-propertyId="@Model.PropertyIdFilter"
                           asp-route-isTenantConfirmed="@Model.IsTenantConfirmedFilter">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3 class="empty-state-title">No Tenancies Found</h3>
            <p class="empty-state-text">
                You don't have any tenancies yet. Tenancies will appear here when tenants rent your properties.
            </p>
        </div>
    }
</div>

