        color: #212529;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .page-header p {
        color: #6c757d;
        font-size: 1rem;
        margin: 0;
    }

    /* Filter Card */
    .filter-card {
        background: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .filter-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e9ecef;
        font-size: 1.125rem;
        font-weight: 600;
        color: #212529;
    }

    .filter-label {
        display: flex;
        align-items: center;
        font-weight: 500;
        color: #212529;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .filter-body .form-select-lg,
    .filter-body .form-control-lg {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

    .filter-body .form-select-lg:focus,
    .filter-body .form-control-lg:focus {
        border-color: #212529;
        box-shadow: 0 0 0 0.15rem rgba(33, 37, 41, 0.1);
    }

    /* Statistics Cards */
    .stat-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        flex-shrink: 0;
    }

    .stat-card-success .stat-icon {
        background: #198754;
        color: #ffffff;
    }

    .stat-card-warning .stat-icon {
        background: #ffc107;
        color: #212529;
    }

    .stat-card-danger .stat-icon {
        background: #dc3545;
        color: #ffffff;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        margin: 0 0 0.25rem 0;
        color: #6c757d;
        font-size: 0.875rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        margin: 0;
        color: #212529;
        font-size: 2rem;
        font-weight: 700;
        line-height: 1;
    }

    .stat-desc {
        margin: 0.25rem 0 0 0;
        color: #6c757d;
        font-size: 0.875rem;
    }

    /* Tenancies List */
    .tenancies-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .tenancy-card {
        background: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .tenancy-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-color: #212529;
    }

    .tenancy-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        padding: 1.5rem;
        background: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
    }

    .tenancy-property-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: #212529;
        margin: 0 0 0.5rem 0;
    }

    .tenancy-property-address {
        color: #6c757d;
        font-size: 0.875rem;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .tenancy-badge {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .tenancy-badge-active {
        background: #198754;
        color: #ffffff;
    }

    .tenancy-badge-pending_confirmation {
        background: #ffc107;
        color: #212529;
    }

    .tenancy-badge-expired {
        background: #dc3545;
        color: #ffffff;
    }

    .tenancy-badge-cancelled {
        background: #6c757d;
        color: #ffffff;
    }

    .tenancy-body {
        padding: 1.5rem;
    }

    .tenancy-info-item {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
        height: 100%;
    }

    .tenancy-info-label {
        display: flex;
        align-items: center;
        font-size: 0.75rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .tenancy-info-value {
        font-size: 1rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 0.25rem;
    }

    .tenancy-info-extra {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .tenancy-footer {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }

    .tenancy-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .tenancy-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.625rem 1.25rem;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        background: #ffffff;
        cursor: pointer;
    }

    .tenancy-btn-view {
        color: #0d6efd;
        border-color: #0d6efd;
    }

    .tenancy-btn-view:hover {
        background: #0d6efd;
        color: #ffffff;
    }

    .tenancy-btn-cancel {
        color: #dc3545;
        border-color: #dc3545;
    }

    .tenancy-btn-cancel:hover {
        background: #dc3545;
        color: #ffffff;
    }

    /* Pagination */
    .pagination .page-link {
        color: #212529;
        border-color: #dee2e6;
        padding: 0.625rem 1rem;
        font-weight: 500;
        border-radius: 6px;
        margin: 0 0.25rem;
    }

    .pagination .page-item.active .page-link {
        background-color: #212529;
        border-color: #212529;
    }

    .pagination .page-link:hover {
        background-color: #f8f9fa;
        border-color: #212529;
        color: #212529;
    }

    .pagination .page-item.disabled .page-link {
        opacity: 0.4;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: #ffffff;
        border: 1px solid #e9ecef;
        border-radius: 12px;
    }

    .empty-state-icon {
        font-size: 5rem;
        color: #dee2e6;
        margin-bottom: 1.5rem;
    }

    .empty-state-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 0.75rem;
    }

    .empty-state-text {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 0;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .tenancy-header {
            flex-direction: column;
            gap: 1rem;
        }

        .tenancy-actions {
            flex-direction: column;
        }

        .tenancy-btn {
            width: 100%;
        }
    }
</style>

<script>
    function cancelTenancy(tenancyId) {
        if (confirm('Are you sure you want to cancel this tenancy? This action cannot be undone.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Owner/Tenancies/Index?handler=Cancel';

            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'tenancyId';
            input.value = tenancyId;

            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }

            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>

@functions {
    private string GetStatusClass(Homerly.BusinessObject.Enums.TenancyStatus status)
    {
        return status switch
        {
            Homerly.BusinessObject.Enums.TenancyStatus.active => "active",
            Homerly.BusinessObject.Enums.TenancyStatus.pending_confirmation => "pending_confirmation",
            Homerly.BusinessObject.Enums.TenancyStatus.expired => "expired",
            Homerly.BusinessObject.Enums.TenancyStatus.cancelled => "cancelled",
            _ => "default"
        };
    }
}
