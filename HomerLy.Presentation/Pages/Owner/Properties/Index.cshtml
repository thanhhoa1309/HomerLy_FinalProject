@page
@model HomerLy.Presentation.Pages.Owner.Properties.IndexModel
@{
    ViewData["Title"] = "My Properties";
    Layout = "~/Pages/Shared/_OwnerLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">
            <i class="bi bi-building me-2"></i>My Properties
        </h2>
        <a asp-page="/Owner/Properties/Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add New Property
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Status</option>
                        <option value="Available" selected="@(Model.StatusFilter == "Available")">Available</option>
                        <option value="Occupied" selected="@(Model.StatusFilter == "Occupied")">Occupied</option>
                        <option value="UnderMaintenance" selected="@(Model.StatusFilter == "UnderMaintenance")">Under Maintenance</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Min Price</label>
                    <input type="number" name="minPrice" class="form-control" placeholder="Min monthly rent" value="@Model.MinPrice" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Max Price</label>
                    <input type="number" name="maxPrice" class="form-control" placeholder="Max monthly rent" value="@Model.MaxPrice" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total Properties</h6>
                            <h3 class="mb-0">@Model.Properties?.TotalCount</h3>
                        </div>
                        <i class="bi bi-building fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Available</h6>
                            <h3 class="mb-0">@Model.AvailableCount</h3>
                        </div>
                        <i class="bi bi-house-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Occupied</h6>
                            <h3 class="mb-0">@Model.OccupiedCount</h3>
                        </div>
                        <i class="bi bi-door-closed fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Properties Grid -->
    @if (Model.Properties != null && Model.Properties.Any())
    {
        <div class="row">
            @foreach (var property in Model.Properties)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card property-card h-100">
                        <div class="property-image-wrapper">
                            @if (!string.IsNullOrEmpty(property.ImageUrl))
                            {
                                <img src="@property.ImageUrl" class="card-img-top" alt="@property.Title">
                            }
                            else
                            {
                                <div class="placeholder-image">
                                    <i class="bi bi-building"></i>
                                </div>
                            }
                            <span class="property-status badge bg-@(property.Status == Homerly.BusinessObject.Enums.PropertyStatus.available ? "success" : property.Status == Homerly.BusinessObject.Enums.PropertyStatus.occupied ? "primary" : "warning")">
                                @property.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-2">@property.Title</h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-geo-alt me-1"></i>@property.Address
                            </p>
                            <p class="card-text text-truncate mb-2" style="height: 40px;">
                                @property.Description
                            </p>
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Monthly Rent</small>
                                    <strong class="text-success">@property.MonthlyRent.ToString("N0") VN?</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Area</small>
                                    <strong>@property.AreaSqm m²</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top">
                            <div class="btn-group w-100" role="group">
                                <a asp-page="/Owner/Properties/Details" asp-route-id="@property.Id" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-page="/Owner/Properties/Edit" asp-route-id="@property.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="deleteProperty('@property.Id')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.Properties.TotalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.Properties.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.Properties.CurrentPage - 1)" asp-route-status="@Model.StatusFilter" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.Properties.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Properties.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-pageNumber="@i" asp-route-status="@Model.StatusFilter" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.Properties.CurrentPage == Model.Properties.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.Properties.CurrentPage + 1)" asp-route-status="@Model.StatusFilter" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox fs-1 d-block mb-3 text-muted"></i>
                <h5 class="text-muted">No properties found</h5>
                <p class="text-muted">Start by adding your first property</p>
                <a asp-page="/Owner/Properties/Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i>Add New Property
                </a>
            </div>
        </div>
    }
</div>

<style>
    .property-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .property-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .property-image-wrapper {
        position: relative;
        overflow: hidden;
    }

    .property-image-wrapper img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .property-card:hover .property-image-wrapper img {
        transform: scale(1.05);
    }

    .placeholder-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 4rem;
    }

    .property-status {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 1;
    }
</style>

<script>
    function deleteProperty(propertyId) {
        if (confirm('Are you sure you want to delete this property? This action cannot be undone.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Owner/Properties/Index?handler=Delete';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'propertyId';
            input.value = propertyId;
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>

