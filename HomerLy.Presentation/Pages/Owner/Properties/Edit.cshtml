@page
@model HomerLy.Presentation.Pages.Owner.Properties.EditModel
@{
    ViewData["Title"] = "Edit Property";
    Layout = "~/Pages/Shared/_OwnerLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0">
                <i class="bi bi-pencil-square me-2"></i>Edit Property
            </h2>
            <p class="text-muted mb-0">Update property information</p>
        </div>
        <div class="btn-group">
            <a asp-page="/Owner/Properties/Details" asp-route-id="@Model.Property?.Id" class="btn btn-outline-dark">
                <i class="bi bi-eye me-2"></i>View Details
            </a>
            <a asp-page="/Owner/Properties/Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Property Information</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="PropertyUpdate.Title" class="form-label fw-semibold">
                                Property Title <span class="text-danger">*</span>
                            </label>
                            <input asp-for="PropertyUpdate.Title" 
                                   class="form-control form-control-lg" 
                                   placeholder="Enter property title" />
                            <span asp-validation-for="PropertyUpdate.Title" class="text-danger small"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-4">
                            <label asp-for="PropertyUpdate.Address" class="form-label fw-semibold">
                                Address <span class="text-danger">*</span>
                            </label>
                            <input asp-for="PropertyUpdate.Address" 
                                   class="form-control form-control-lg" 
                                   placeholder="Full address" />
                            <span asp-validation-for="PropertyUpdate.Address" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="PropertyUpdate.Description" class="form-label fw-semibold">
                                Description
                            </label>
                            <textarea asp-for="PropertyUpdate.Description" 
                                      class="form-control" 
                                      rows="5" 
                                      placeholder="Property description"></textarea>
                            <span asp-validation-for="PropertyUpdate.Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <!-- Monthly Price -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="PropertyUpdate.MonthlyPrice" class="form-label fw-semibold">
                                    Monthly Rent (VNĐ)
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-cash-stack"></i>
                                    </span>
                                    <input asp-for="PropertyUpdate.MonthlyPrice" 
                                           type="number" 
                                           class="form-control" 
                                           step="100000"
                                           min="0" />
                                </div>
                                <span asp-validation-for="PropertyUpdate.MonthlyPrice" class="text-danger small"></span>
                            </div>

                            <!-- Area -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="PropertyUpdate.AreaSqm" class="form-label fw-semibold">
                                    Area (m²)
                                </label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white">
                                        <i class="bi bi-rulers"></i>
                                    </span>
                                    <input asp-for="PropertyUpdate.AreaSqm" 
                                           type="number" 
                                           class="form-control" 
                                           min="1" />
                                </div>
                                <span asp-validation-for="PropertyUpdate.AreaSqm" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-4">
                            <label asp-for="PropertyUpdate.ImageUrl" class="form-label fw-semibold">
                                Image URL
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-image"></i>
                                </span>
                                <input asp-for="PropertyUpdate.ImageUrl" 
                                       type="url" 
                                       class="form-control" 
                                       placeholder="https://..." />
                            </div>
                            <span asp-validation-for="PropertyUpdate.ImageUrl" class="text-danger small"></span>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-dark btn-lg px-5">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                            <a asp-page="/Owner/Properties/Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Property Info Sidebar -->
        <div class="col-lg-4">
            @if (Model.Property != null)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-dark text-white py-3">
                        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Current Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Property ID</small>
                            <code class="small">@Model.Property.Id</code>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Status</small>
                            <span class="badge bg-@(Model.Property.Status == Homerly.BusinessObject.Enums.PropertyStatus.available ? "success" : 
                                                     Model.Property.Status == Homerly.BusinessObject.Enums.PropertyStatus.occupied ? "primary" : "warning")">
                                @Model.Property.Status
                            </span>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Created</small>
                            <small>@Model.Property.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">Last Updated</small>
                            <small>@Model.Property.UpdatedAt?.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>

                <!-- Image Preview -->
                @if (!string.IsNullOrEmpty(Model.Property.ImageUrl))
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-bottom py-3">
                            <h6 class="mb-0"><i class="bi bi-image me-2"></i>Current Image</h6>
                        </div>
                        <div class="card-body p-0">
                            <img src="@Model.Property.ImageUrl" 
                                 alt="@Model.Property.Title" 
                                 class="img-fluid w-100"
                                 style="max-height: 300px; object-fit: cover;" />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #212529;
        box-shadow: 0 0 0 0.2rem rgba(33, 37, 41, 0.25);
    }

    .input-group-text {
        border-right: 0;
    }

    .input-group .form-control {
        border-left: 0;
    }

    .input-group:focus-within .input-group-text {
        border-color: #212529;
    }

    .btn-dark:hover {
        background-color: #000;
        border-color: #000;
    }
</style>
