@page
@model HomerLy.Presentation.Pages.Home.LandingPageModel
@{
    ViewData["Title"] = "Homerly - Real Estate Auction Platform";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #212529;
            --text-primary: #212529;
            --text-secondary: #6c757d;
            --text-muted: #adb5bd;
            --bg-light: #fafbfc;
            --white: #ffffff;
            --border-color: #e9ecef;
            --shadow: 0 1px 3px rgba(0, 0, 0, 0.04);
            --shadow-hover: 0 4px 12px rgba(0, 0, 0, 0.08);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            line-height: 1.6;
            color: var(--text-primary);
            overflow-x: hidden;
            background-color: var(--white);
        }

        /* Hero Section */
        .hero {
            background: var(--white);
            color: var(--text-primary);
            padding: 120px 20px 100px;
            text-align: center;
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid var(--border-color);
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 900px;
            margin: 0 auto;
            animation: fadeInUp 1s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero h1 {
            font-size: 4rem;
            margin-bottom: 24px;
            font-weight: 800;
            line-height: 1.2;
            color: var(--text-primary);
        }

        .hero .subtitle {
            font-size: 1.4rem;
            margin-bottom: 40px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            font-weight: 400;
            color: var(--text-secondary);
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 40px;
        }

        .btn {
            padding: 16px 48px;
            font-size: 1.1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.15s ease;
            font-weight: 600;
            font-family: 'Inter', sans-serif;
        }

            .btn i {
                font-size: 1.2rem;
            }

        .btn-primary {
            background: var(--text-primary);
            color: var(--white);
            box-shadow: var(--shadow);
        }

            .btn-primary:hover {
                background: #343a40;
                box-shadow: var(--shadow-hover);
            }

        .btn-secondary {
            background: var(--white);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

            .btn-secondary:hover {
                background: var(--bg-light);
                border-color: var(--text-primary);
            }

        /* Trust Indicators */
        .trust-indicators {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-top: 60px;
            flex-wrap: wrap;
        }

        .trust-item {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 0.95rem;
            color: var(--text-secondary);
        }

            .trust-item i {
                color: var(--text-primary);
                font-size: 1.2rem;
            }

        /* Features Section */
        .features {
            padding: 100px 20px;
            background: var(--bg-light);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-header {
            text-align: center;
            margin-bottom: 70px;
        }

        .section-label {
            color: var(--text-secondary);
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin-bottom: 12px;
        }

        .section-title {
            font-size: 2.8rem;
            margin-bottom: 20px;
            color: var(--text-primary);
            font-weight: 700;
        }

        .section-description {
            font-size: 1.2rem;
            color: var(--text-secondary);
            max-width: 700px;
            margin: 0 auto;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
        }

        .feature-card {
            background: var(--white);
            padding: 45px 35px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            text-align: center;
            transition: all 0.15s ease;
            position: relative;
        }

            .feature-card:hover {
                transform: translateY(-4px);
                box-shadow: var(--shadow-hover);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 25px;
            background: var(--text-primary);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--white);
        }

        .feature-card h3 {
            font-size: 1.6rem;
            margin-bottom: 16px;
            color: var(--text-primary);
            font-weight: 600;
        }

        .feature-card p {
            color: var(--text-secondary);
            line-height: 1.7;
            font-size: 1.05rem;
        }

        /* Stats Section */
        .stats {
            background: var(--white);
            padding: 80px 20px;
            border-top: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 50px;
            max-width: 1100px;
            margin: 0 auto;
            text-align: center;
        }

        .stat-item {
            animation: fadeInUp 0.6s ease-out backwards;
        }

            .stat-item:nth-child(1) {
                animation-delay: 0.1s;
            }

            .stat-item:nth-child(2) {
                animation-delay: 0.2s;
            }

            .stat-item:nth-child(3) {
                animation-delay: 0.3s;
            }

            .stat-item:nth-child(4) {
                animation-delay: 0.4s;
            }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: var(--text-primary);
        }

        .stat-item h2 {
            font-size: 3.5rem;
            margin-bottom: 10px;
            font-weight: 800;
            color: var(--text-primary);
        }

        .stat-item p {
            font-size: 1.2rem;
            color: var(--text-secondary);
            font-weight: 400;
        }

        /* How It Works Section */
        .how-it-works {
            padding: 30px 20px;
            background: var(--bg-light);
        }

        .steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 50px;
            max-width: 1200px;
            margin: 60px auto 0;
            position: relative;
        }

            .steps::before {
                content: '';
                position: absolute;
                top: 30px;
                left: 15%;
                right: 15%;
                height: 2px;
                background: var(--border-color);
                z-index: 0;
            }

        .step {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .step-number {
            width: 70px;
            height: 70px;
            background: var(--text-primary);
            color: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            font-weight: 800;
            margin: 0 auto 25px;
            box-shadow: var(--shadow);
            position: relative;
            border: 4px solid var(--white);
        }

        .step h3 {
            font-size: 1.4rem;
            margin-bottom: 16px;
            color: var(--text-primary);
            font-weight: 600;
        }

        .step p {
            color: var(--text-secondary);
            line-height: 1.7;
            font-size: 1.05rem;
        }

        /* Testimonials Section */
        .testimonials {
            padding: 30px 20px;
            background: var(--white);
        }

        .testimonials-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
            max-width: 1200px;
            margin: 60px auto 0;
        }

        .testimonial-card {
            background: var(--white);
            padding: 40px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            position: relative;
            transition: all 0.15s ease;
        }

            .testimonial-card:hover {
                box-shadow: var(--shadow-hover);
            }

            .testimonial-card::before {
                content: '"';
                position: absolute;
                top: 20px;
                left: 30px;
                font-size: 6rem;
                color: var(--text-primary);
                opacity: 0.05;
                font-family: Georgia, serif;
            }

        .testimonial-text {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text-secondary);
            margin-bottom: 25px;
            position: relative;
            z-index: 1;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .author-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: var(--text-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
            font-size: 1.5rem;
            font-weight: 600;
        }

        .author-info h4 {
            font-size: 1.1rem;
            color: var(--text-primary);
            margin-bottom: 4px;
            font-weight: 600;
        }

        .author-info p {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .rating {
            color: var(--text-primary);
            margin-top: 8px;
            font-size: 0.875rem;
        }

        /* Call to Action Section */
        .cta-section {
            background: var(--text-primary);
            padding: 50px 20px;
            text-align: center;
            color: var(--white);
        }

        .cta-content {
            position: relative;
            z-index: 1;
        }

        .cta-section h2 {
            font-size: 3rem;
            margin-bottom: 20px;
            font-weight: 700;
            color: var(--white);
        }

        .cta-section p {
            font-size: 1.3rem;
            margin-bottom: 40px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            color: rgba(255, 255, 255, 0.9);
        }

        .cta-section .btn-primary {
            background: var(--white);
            color: var(--text-primary);
        }

            .cta-section .btn-primary:hover {
                background: var(--bg-light);
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .hero .subtitle {
                font-size: 1.1rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                max-width: 320px;
                justify-content: center;
            }

            .steps::before {
                display: none;
            }

            .trust-indicators {
                gap: 20px;
            }

            .features-grid,
            .testimonials-grid {
                grid-template-columns: 1fr;
            }

            .stat-item h2 {
                font-size: 2.5rem;
            }
        }

        @@media (max-width: 480px) {
            .hero {
                padding: 80px 15px 60px;
            }

                .hero h1 {
                    font-size: 2rem;
                }

            .section-title {
                font-size: 1.8rem;
            }

            .cta-section h2 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>🏠 Welcome to Homerly</h1>
            <p class="subtitle">Your trusted platform for real estate auctions. Find your dream property or list yours today with confidence and transparency!</p>
            <div class="cta-buttons">
                <a href="/Auth/Register" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i>
                    Get Started
                </a>
                <a href="/Auth/Login" class="btn btn-secondary">
                    <i class="fas fa-sign-in-alt"></i>
                    Sign In
                </a>
            </div>
            <div class="trust-indicators">
                <div class="trust-item">
                    <i class="fas fa-shield-alt"></i>
                    <span>Secure Platform</span>
                </div>
                <div class="trust-item">
                    <i class="fas fa-check-circle"></i>
                    <span>Verified Properties</span>
                </div>
                <div class="trust-item">
                    <i class="fas fa-users"></i>
                    <span>5000+ Users</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <div class="section-header">
                <div class="section-label">Features</div>
                <h2 class="section-title">Why Choose Homerly?</h2>
                <p class="section-description">Discover the advantages that make us the leading real estate auction platform</p>
            </div>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">🏘️</div>
                    <h3>Wide Property Selection</h3>
                    <p>Browse thousands of verified properties available for auction, from cozy apartments to luxury estates.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">⚡</div>
                    <h3>Real-Time Bidding</h3>
                    <p>Participate in live auctions with real-time updates, instant notifications, and competitive bidding.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">🔒</div>
                    <h3>Secure Transactions</h3>
                    <p>Your payments and personal information are protected with bank-level encryption and security.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">👥</div>
                    <h3>For Property Owners</h3>
                    <p>List your properties easily and reach thousands of potential buyers through our powerful platform.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">📊</div>
                    <h3>Transparent Process</h3>
                    <p>All auction activities are tracked and transparent, ensuring fair bidding for everyone involved.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">💬</div>
                    <h3>Expert Support</h3>
                    <p>Our dedicated team is available 24/7 to help you every step of the way throughout your journey.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-icon">🏘️</div>
                <h2>1000+</h2>
                <p>Properties Listed</p>
            </div>
            <div class="stat-item">
                <div class="stat-icon">👥</div>
                <h2>5000+</h2>
                <p>Active Users</p>
            </div>
            <div class="stat-item">
                <div class="stat-icon">✅</div>
                <h2>500+</h2>
                <p>Successful Auctions</p>
            </div>
            <div class="stat-item">
                <div class="stat-icon">⭐</div>
                <h2>99%</h2>
                <p>Satisfaction Rate</p>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
        <div class="container">
            <div class="section-header">
                <div class="section-label">Process</div>
                <h2 class="section-title">How It Works</h2>
                <p class="section-description">Get started in four simple steps</p>
            </div>
            <div class="steps">
                <div class="step">
                    <div class="step-number">1</div>
                    <h3>Create Account</h3>
                    <p>Sign up for free in minutes and complete your profile to unlock all features.</p>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <h3>Browse Properties</h3>
                    <p>Explore our extensive catalog of verified properties that match your criteria.</p>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <h3>Place Your Bid</h3>
                    <p>Join live auctions and place your bids with confidence in real-time.</p>
                </div>
                <div class="step">
                    <div class="step-number">4</div>
                    <h3>Win & Own</h3>
                    <p>Win the auction and complete the secure transaction to own your dream property.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials">
        <div class="container">
            <div class="section-header">
                <div class="section-label">Testimonials</div>
                <h2 class="section-title">What Our Users Say</h2>
                <p class="section-description">Real stories from real people who found their dream properties</p>
            </div>
            <div class="testimonials-grid">
                <div class="testimonial-card">
                    <p class="testimonial-text">
                        "Homerly made finding my dream home so easy! The bidding process was transparent and exciting. Highly recommended!"
                    </p>
                    <div class="testimonial-author">
                        <div class="author-avatar">JD</div>
                        <div class="author-info">
                            <h4>John Doe</h4>
                            <p>Property Buyer</p>
                            <div class="rating">★★★★★</div>
                        </div>
                    </div>
                </div>
                <div class="testimonial-card">
                    <p class="testimonial-text">
                        "As a property owner, I was able to sell my property quickly and at a great price. The platform is user-friendly and secure."
                    </p>
                    <div class="testimonial-author">
                        <div class="author-avatar">MS</div>
                        <div class="author-info">
                            <h4>Mary Smith</h4>
                            <p>Property Owner</p>
                            <div class="rating">★★★★★</div>
                        </div>
                    </div>
                </div>
                <div class="testimonial-card">
                    <p class="testimonial-text">
                        "The real-time bidding feature is amazing! I won my first auction and the whole process was smooth from start to finish."
                    </p>
                    <div class="testimonial-author">
                        <div class="author-avatar">RJ</div>
                        <div class="author-info">
                            <h4>Robert Johnson</h4>
                            <p>First-time Buyer</p>
                            <div class="rating">★★★★★</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Get Started?</h2>
            <p>Join thousands of users who have found their dream properties through Homerly. Start your journey today!</p>
            <div class="cta-buttons">
                <a href="/Auth/Register" class="btn btn-primary">
                    <i class="fas fa-rocket"></i>
                    Create Free Account
                </a>
            </div>
        </div>
    </section>
</body>
</html>