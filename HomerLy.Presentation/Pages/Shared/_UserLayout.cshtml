<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomerLy User</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-dashboard.css" asp-append-version="true" />
</head>

<body class="user-layout">
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-house-heart-fill me-2"></i>HomerLy</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-page="/User/Dashboard">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-page="/User/Properties/Index">
                        <i class="bi bi-search"></i>
                        <span>Browse Properties</span>
                    </a>
                </li>
                <li>
                    <a asp-page="/User/Favorites/Index">
                        <i class="bi bi-heart"></i>
                        <span>Favorites</span>
                    </a>
                </li>
                <li>
                    <a asp-page="/User/Tenancies/Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>My Tenancies</span>
                    </a>
                </li>
                <li>
                    <a asp-page="/User/Payments/Index">
                        <i class="bi bi-credit-card"></i>
                        <span>Payments</span>
                    </a>
                </li>
                <li>
                    <a asp-page="/User/Profile">
                        <i class="bi bi-person-circle"></i>
                        <span>My Profile</span>
                    </a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                <li>
                    <a asp-page="/Index" class="download" style="background: rgba(255,255,255,0.1);">
                        <i class="bi bi-arrow-left me-2"></i>Back to Home
                    </a>
                </li>
                <li>
                    <a asp-page="/Auth/Logout" class="download">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-secondary">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <button class="btn btn-link text-decoration-none dropdown-toggle" type="button"
                                id="userDropdown" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-4"></i>
                                <span class="ms-2">@User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-page="/User/Profile"><i
                                            class="bi bi-person me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" asp-page="/User/Settings"><i
                                            class="bi bi-gear me-2"></i>Settings</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" asp-page="/Auth/Logout"><i
                                            class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid py-4">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="footer mt-auto py-3 bg-light">
                <div class="container-fluid">
                    <span class="text-muted">&copy; 2024 HomerLy - Property Management System</span>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

            // Auto dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
