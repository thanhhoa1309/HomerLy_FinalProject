<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomerLy Owner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/owner-dashboard.css" asp-append-version="true" />
</head>
<body class="owner-layout">
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="bi bi-house-heart-fill me-2"></i>HomerLy Owner</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-page="/Owner/Dashboard">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="#propertySubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-building"></i>
                        <span>My Properties</span>
                    </a>
                    <ul class="collapse list-unstyled" id="propertySubmenu">
                        <li><a asp-page="/Owner/Properties/Index">All Properties</a></li>
                        <li><a asp-page="/Owner/Properties/Create">Add New Property</a></li>
                        <li><a asp-page="/Owner/Properties/Index" asp-route-status="Available">Available</a></li>
                        <li><a asp-page="/Owner/Properties/Index" asp-route-status="Occupied">Occupied</a></li>
                        <li><a asp-page="/Owner/Properties/Index" asp-route-status="UnderMaintenance">Under Maintenance</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#tenancySubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Tenancies</span>
                    </a>
                    <ul class="collapse list-unstyled" id="tenancySubmenu">
                        <li><a asp-page="/Owner/Tenancies/Index">All Tenancies</a></li>
                        <li><a asp-page="/Owner/Tenancies/Create">Create Tenancy</a></li>
                        <li><a asp-page="/Owner/Tenancies/Index" asp-route-status="Active">Active</a></li>
                        <li><a asp-page="/Owner/Tenancies/Index" asp-route-status="Pending">Pending</a></li>
                        <li><a asp-page="/Owner/Tenancies/Index" asp-route-status="Expired">Expired</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#utilitySubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-lightning-charge"></i>
                        <span>Utility Readings</span>
                    </a>
                    <ul class="collapse list-unstyled" id="utilitySubmenu">
                        <li><a asp-page="/Owner/Utilities/Index">All Readings</a></li>
                        <li><a asp-page="/Owner/Utilities/Create">Add Reading</a></li>
                        <li><a asp-page="/Owner/Utilities/Index" asp-route-isCharged="false">Pending Charge</a></li>
                        <li><a asp-page="/Owner/Utilities/Index" asp-route-isCharged="true">Charged</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#reportSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="bi bi-exclamation-triangle"></i>
                        <span>Maintenance Reports</span>
                    </a>
                    <ul class="collapse list-unstyled" id="reportSubmenu">
                        <li><a asp-page="/Owner/Reports/Index">All Reports</a></li>
                        <li><a asp-page="/Owner/Reports/Index" asp-route-priority="High">High Priority</a></li>
                        <li><a asp-page="/Owner/Reports/Index" asp-route-priority="Medium">Medium Priority</a></li>
                        <li><a asp-page="/Owner/Reports/Index" asp-route-priority="Low">Low Priority</a></li>
                    </ul>
                </li>
                <li>
                    <a asp-page="/Owner/Tenants">
                        <i class="bi bi-people"></i>
                        <span>My Tenants</span>
                    </a>
                </li>
                <li>
                    <a asp-page="/Owner/Revenue">
                        <i class="bi bi-cash-stack"></i>
                        <span>Revenue & Payments</span>
                    </a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                <li>
                    <a asp-page="/Auth/Logout" class="download">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-secondary">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-4"></i>
                                <span class="ms-2">@User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-page="/Owner/Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" asp-page="/Owner/Settings"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Auth/Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid py-4">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="footer mt-auto py-3 bg-light">
                <div class="container-fluid">
                    <span class="text-muted">&copy; 2024 HomerLy - Property Management System</span>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

            // Auto dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
