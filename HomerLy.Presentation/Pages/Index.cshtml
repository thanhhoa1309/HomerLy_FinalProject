@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 500px;">
    <div class="container">
        <div class="row align-items-center" style="min-height: 400px;">
            <div class="col-lg-12">
                <h1 class="display-3 fw-bold mb-4">Welcome to HomerLy</h1>
                <p class="lead mb-5">Your trusted platform for property management and rental solutions</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-page="/Auth/Login" class="btn btn-light btn-lg px-5 me-md-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                    <a asp-page="/Auth/Register" class="btn btn-outline-light btn-lg px-5">
                        <i class="fas fa-user-plus me-2"></i>Get Started
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5 py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">Why Choose HomerLy?</h2>
        <p class="text-muted">Discover the perfect solution for property management</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-4">
                <div class="card-body">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <h5 class="card-title">Easy Property Management</h5>
                    <p class="card-text text-muted">Manage all your properties in one place with our intuitive dashboard</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-4">
                <div class="card-body">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h5 class="card-title">Tenant Management</h5>
                    <p class="card-text text-muted">Keep track of all your tenants and their rental agreements</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-4">
                <div class="card-body">
                    <div class="feature-icon bg-warning bg-gradient text-white rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-credit-card fa-2x"></i>
                    </div>
                    <h5 class="card-title">Online Payments</h5>
                    <p class="card-text text-muted">Secure and convenient payment processing for rent and utilities</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-4">
                <div class="card-body">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h5 class="card-title">Analytics & Reports</h5>
                    <p class="card-text text-muted">Get detailed insights into your property portfolio performance</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-4">
                <div class="card-body">
                    <div class="feature-icon bg-danger bg-gradient text-white rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-shield-alt fa-2x"></i>
                    </div>
                    <h5 class="card-title">Secure Platform</h5>
                    <p class="card-text text-muted">Your data is protected with enterprise-grade security</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center p-4">
                <div class="card-body">
                    <div class="feature-icon bg-secondary bg-gradient text-white rounded-circle p-3 d-inline-block mb-3">
                        <i class="fas fa-headset fa-2x"></i>
                    </div>
                    <h5 class="card-title">24/7 Support</h5>
                    <p class="card-text text-muted">Our support team is always ready to help you</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section py-5" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
    <div class="container text-center text-white">
        <h2 class="display-5 fw-bold mb-4">Ready to Get Started?</h2>
        <p class="lead mb-4">Join thousands of property owners and tenants using HomerLy</p>
        <a asp-page="/Auth/Register" class="btn btn-light btn-lg px-5">
            <i class="fas fa-rocket me-2"></i>Start Free Trial
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

