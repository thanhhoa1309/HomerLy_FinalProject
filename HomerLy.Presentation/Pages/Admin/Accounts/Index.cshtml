@page
@model HomerLy.Presentation.Pages.Admin.Accounts.IndexModel
@{
    ViewData["Title"] = "Account Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<style>
    /* Accounts page-specific styles */
    .stat-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 24px;
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        height: 100%;
        min-width: 0;
    }

    .stat-card-content h3 {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        line-height: 1;
    }

    .stat-card-content p {
        font-size: 0.8125rem;
        color: #6c757d;
        margin: 4px 0 0 0;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        color: #1a1a1a;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .badge-admin {
        background: #1a1a1a !important;
        color: #ffffff !important;
    }

    .badge-owner {
        background: #f5f5f5 !important;
        color: #1a1a1a !important;
        border: 1px solid #e5e5e5 !important;
    }

    .badge-user {
        background: #ffffff !important;
        color: #666666 !important;
        border: 1px solid #e5e5e5 !important;
    }

    .btn-group-sm .btn {
        border-color: #e5e5e5;
    }

        .btn-group-sm .btn:hover {
            background: #1a1a1a;
            border-color: #1a1a1a;
            color: #ffffff;
        }

    /* Custom layout styles */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
    }

        .filter-grid > div:last-child {
            display: flex;
            align-items: flex-end;
        }

    .user-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .table tbody td,
    .table thead th {
        vertical-align: middle;
        text-align: center;
    }

        .table tbody td:first-child,
        .table thead th:first-child {
            text-align: left;
        }
</style>

<div class="container-fluid">
    <!-- Header -->
    <div class="page-header">
        <h2 class="h4 mb-0 fw-semibold">
            <i class="bi bi-people me-2"></i>Account Management
        </h2>
        <a asp-page="/Admin/Accounts/Create" class="btn btn-dark">
            <i class="bi bi-plus-circle me-2"></i>Create New Account
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h6 class="mb-0 fw-semibold"><i class="bi bi-funnel me-2"></i>Filters</h6>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="filter-grid">
                    <div>
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select" onchange="this.form.submit()">
                            <option value="">All Roles</option>
                            <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                            <option value="Owner" selected="@(Model.RoleFilter == "Owner")">Owner</option>
                            <option value="User" selected="@(Model.RoleFilter == "User")">User</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Owner Approval</label>
                        <select name="isOwnerApproved" class="form-select" onchange="this.form.submit()">
                            <option value="">All</option>
                            <option value="true" selected="@(Model.IsOwnerApprovedFilter == true)">Approved</option>
                            <option value="false" selected="@(Model.IsOwnerApprovedFilter == false)">Pending</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Search</label>
                        <input type="text" name="search" class="form-control" placeholder="Email, Name, Phone..." value="@Model.SearchQuery" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="bi bi-search me-2"></i>Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stat-card-wrapper">
        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@Model.Accounts?.TotalCount</h3>
                <p>Total Accounts</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-people"></i>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@Model.TotalOwners</h3>
                <p>Owners</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-building"></i>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@Model.TotalUsers</h3>
                <p>Users</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-person"></i>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-content">
                <h3>@Model.PendingApprovalCount</h3>
                <p>Pending Approval</p>
            </div>
            <div class="stat-icon">
                <i class="bi bi-hourglass-split"></i>
            </div>
        </div>
    </div>

    <!-- Accounts Table -->
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0 fw-semibold">Accounts List</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>CCCD</th>
                            <th>Role</th>
                            <th>Approval Status</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Accounts != null && Model.Accounts.Count > 0)
                        {
                            @foreach (var account in Model.Accounts)
                            {
                                <tr>
                                    <td>
                                        <div class="user-cell">
                                            <div class="avatar-circle">
                                                @account.FullName?.Substring(0, 1).ToUpper()
                                            </div>
                                            <span class="fw-medium">@account.FullName</span>
                                        </div>
                                    </td>
                                    <td>@account.Email</td>
                                    <td class="text-secondary">@account.CccdNumber</td>
                                    <td>
                                        <span class="badge @(account.Role == Homerly.BusinessObject.Enums.RoleType.Admin ? "badge-admin" : account.Role == Homerly.BusinessObject.Enums.RoleType.Owner ? "badge-owner" : "badge-user")">
                                            @account.Role
                                        </span>
                                    </td>
                                    <td>
                                        @if (account.Role == Homerly.BusinessObject.Enums.RoleType.Owner)
                                        {
                                            @if (account.IsOwnerApproved)
                                            {
                                                <span class="badge badge-admin">
                                                    <i class="bi bi-check-circle me-1"></i>Approved
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-owner">
                                                    <i class="bi bi-clock me-1"></i>Pending
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-secondary">Not Owner</span>
                                        }
                                    </td>
                                    <td class="text-secondary">@account.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="/Admin/Accounts/Details" asp-route-id="@account.Id" class="btn btn-outline-dark" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="/Admin/Accounts/Update" asp-route-id="@account.Id" class="btn btn-outline-dark" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-dark" onclick="deleteAccount('@account.Id')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-secondary">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No accounts found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (Model.Accounts?.TotalPages > 1)
        {
            <div class="card-footer bg-transparent">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.Accounts.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.Accounts.CurrentPage - 1)" asp-route-role="@Model.RoleFilter" asp-route-search="@Model.SearchQuery">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.Accounts.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Accounts.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i" asp-route-role="@Model.RoleFilter" asp-route-search="@Model.SearchQuery">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Accounts.CurrentPage == Model.Accounts.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.Accounts.CurrentPage + 1)" asp-route-role="@Model.RoleFilter" asp-route-search="@Model.SearchQuery">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<script>
    function deleteAccount(accountId) {
        if (confirm('Are you sure you want to delete this account? This action cannot be undone.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Admin/Accounts/Index?handler=Delete';

            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'accountId';
            input.value = accountId;

            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (!token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                form.appendChild(tokenInput);
            } else {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }

            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>