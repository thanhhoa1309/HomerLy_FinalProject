@page
@model HomerLy.Presentation.Pages.Admin.Accounts.IndexModel
@{
    ViewData["Title"] = "Account Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">
            <i class="bi bi-people-fill me-2"></i>Account Management
        </h2>
        <a asp-page="/Admin/Accounts/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New Account
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Role</label>
                    <select name="role" class="form-select" onchange="this.form.submit()">
                        <option value="">All Roles</option>
                        <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                        <option value="Owner" selected="@(Model.RoleFilter == "Owner")">Owner</option>
                        <option value="User" selected="@(Model.RoleFilter == "User")">User</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Owner Approval</label>
                    <select name="isOwnerApproved" class="form-select" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="true" selected="@(Model.IsOwnerApprovedFilter == true)">Approved</option>
                        <option value="false" selected="@(Model.IsOwnerApprovedFilter == false)">Pending</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Email, Name, Phone..." value="@Model.SearchQuery" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Total Accounts</h6>
                            <h3 class="mb-0">@Model.Accounts?.TotalCount</h3>
                        </div>
                        <i class="bi bi-people-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Owners</h6>
                            <h3 class="mb-0">@Model.TotalOwners</h3>
                        </div>
                        <i class="bi bi-building fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Users</h6>
                            <h3 class="mb-0">@Model.TotalUsers</h3>
                        </div>
                        <i class="bi bi-person-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Pending Approval</h6>
                            <h3 class="mb-0">@Model.PendingApprovalCount</h3>
                        </div>
                        <i class="bi bi-hourglass-split fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Accounts Table -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">Accounts List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>CCCD</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Accounts != null && Model.Accounts.Count > 0)
                        {
                            @foreach (var account in Model.Accounts)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-white me-2">
                                                @account.FullName?.Substring(0, 1).ToUpper()
                                            </div>
                                            @account.FullName
                                        </div>
                                    </td>
                                    <td>@account.Email</td>
                                    <td>@account.CccdNumber</td>
                                    <td>
                                        <span class="badge bg-@(account.Role == Homerly.BusinessObject.Enums.RoleType.Admin ? "danger" : account.Role == Homerly.BusinessObject.Enums.RoleType.Owner ? "success" : "info")">
                                            @account.Role
                                        </span>
                                    </td>
                                    <td>@account.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="/Admin/Accounts/Details" asp-route-id="@account.Id" class="btn btn-outline-primary" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="/Admin/Accounts/Edit" asp-route-id="@account.Id" class="btn btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" onclick="deleteAccount('@account.Id')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No accounts found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (Model.Accounts?.TotalPages > 1)
        {
            <div class="card-footer">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.Accounts.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.Accounts.CurrentPage - 1)" asp-route-role="@Model.RoleFilter" asp-route-search="@Model.SearchQuery">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.Accounts.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Accounts.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i" asp-route-role="@Model.RoleFilter" asp-route-search="@Model.SearchQuery">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Accounts.CurrentPage == Model.Accounts.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.Accounts.CurrentPage + 1)" asp-route-role="@Model.RoleFilter" asp-route-search="@Model.SearchQuery">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<style>
    .avatar-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }
</style>

<script>
    function deleteAccount(accountId) {
        if (confirm('Are you sure you want to delete this account? This action cannot be undone.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Admin/Accounts/Index?handler=Delete';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'accountId';
            input.value = accountId;
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (!token) {
                // Create anti-forgery token if not exists
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                form.appendChild(tokenInput);
            } else {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
