@page
@using Homerly.BusinessObject.Enums
@model HomerLy.Presentation.Pages.Admin.Accounts.DetailsModel
@{
    ViewData["Title"] = "Account Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<style>
    /* Account Details page-specific styles */
    .detail-card {
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 24px;
        margin-bottom: 24px;
    }

    .detail-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 16px;
        border-bottom: 1px solid #e9ecef;
    }

    .detail-card-header h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0;
    }

    .detail-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 16px;
    }

    .detail-item {
        padding: 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .detail-label {
        font-size: 0.8125rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .detail-value {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
    }

    .detail-value-secondary {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 4px;
    }

    .stat-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 24px;
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        height: 100%;
        min-width: 0;
    }

    .stat-card-content h3 {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        line-height: 1;
    }

    .stat-card-content p {
        font-size: 0.8125rem;
        color: #6c757d;
        margin: 4px 0 0 0;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        color: #1a1a1a;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .badge-admin {
        background: #1a1a1a !important;
        color: #ffffff !important;
    }

    .badge-owner {
        background: #f5f5f5 !important;
        color: #1a1a1a !important;
        border: 1px solid #e5e5e5 !important;
    }

    .badge-user {
        background: #ffffff !important;
        color: #666666 !important;
        border: 1px solid #e5e5e5 !important;
    }

    .badge-approved {
        background: #1a1a1a !important;
        color: #ffffff !important;
    }

    .badge-pending {
        background: #f5f5f5 !important;
        color: #1a1a1a !important;
        border: 1px solid #e5e5e5 !important;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: #1a1a1a;
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 3rem;
        margin: 0 auto 24px;
    }

    .profile-center {
        text-align: center;
    }

    .timeline {
        position: relative;
        padding-left: 32px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 8px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e9ecef;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 24px;
    }

    .timeline-dot {
        position: absolute;
        left: -28px;
        top: 4px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: #1a1a1a;
        border: 3px solid #fff;
        box-shadow: 0 0 0 2px #e9ecef;
    }

    .timeline-content {
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .timeline-title {
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 4px;
    }

    .timeline-date {
        font-size: 0.875rem;
        color: #6c757d;
    }

    @@media (max-width: 768px) {
        .detail-row {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
            width: 100%;
        }

        .action-buttons .btn {
            width: 100%;
        }
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h2 class="h4 mb-1 fw-semibold">
                <i class="bi bi-person me-2"></i>Account Details
            </h2>
            <p class="text-secondary mb-0" style="font-size: 0.875rem;">View complete account information</p>
        </div>
        <div class="action-buttons">
            <a asp-page="/Admin/Accounts/Index" class="btn btn-outline-dark">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
            @if (Model.Account != null)
            {
                <a asp-page="/Admin/Accounts/Update" asp-route-id="@Model.Account.Id" class="btn btn-dark">
                    <i class="bi bi-pencil me-2"></i>Edit Account
                </a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Account.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this account? This action cannot be undone.')">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                </form>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Account == null)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-exclamation-triangle fs-1 text-secondary d-block mb-3"></i>
                <h5 class="text-secondary">Account not found</h5>
                <a asp-page="/Admin/Accounts/Index" class="btn btn-dark mt-3">
                    <i class="bi bi-arrow-left me-2"></i>Go Back
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Profile Summary -->
        <div class="detail-card">
            <div class="profile-center">
                <div class="profile-avatar">
                    @Model.Account.FullName?.Substring(0, 1).ToUpper()
                </div>
                <h3 class="mb-2 fw-semibold">@Model.Account.FullName</h3>
                <p class="text-secondary mb-3">@Model.Account.Email</p>
                <div class="d-flex gap-2 justify-content-center">
                    <span class="badge @(Model.Account.Role == RoleType.Admin ? "badge-admin" : Model.Account.Role == RoleType.Owner ? "badge-owner" : "badge-user")">
                        @Model.Account.Role
                    </span>
                    @if (Model.Account.Role == RoleType.Owner)
                    {
                        @if (Model.Account.IsDeleted)
                        {
                            <span class="badge badge-pending">Deleted</span>
                        }
                        else
                        {
                            <span class="badge badge-approved">Approved Owner</span>
                        }
                    }
                    @if (Model.Account.IsDeleted)
                    {
                        <span class="badge badge-pending">
                            <i class="bi bi-trash me-1"></i>Deleted
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Account Information -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-person-badge me-2"></i>Personal Information</h3>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Full Name</span>
                    <div class="detail-value">@Model.Account.FullName</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Email Address</span>
                    <div class="detail-value">@Model.Account.Email</div>
                </div>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Phone Number</span>
                    <div class="detail-value">@Model.Account.Phone</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">CCCD Number</span>
                    <div class="detail-value">@Model.Account.CccdNumber</div>
                </div>
            </div>
        </div>

        <!-- Account Status -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-info-circle me-2"></i>Account Status</h3>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Role</span>
                    <div class="detail-value">
                        <span class="badge @(Model.Account.Role == RoleType.Admin ? "badge-admin" : Model.Account.Role == RoleType.Owner ? "badge-owner" : "badge-user")">
                            @Model.Account.Role
                        </span>
                    </div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Account Status</span>
                    <div class="detail-value">
                        @if (Model.Account.IsDeleted)
                        {
                            <span class="badge badge-pending">
                                <i class="bi bi-x-circle me-1"></i>Deleted
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-approved">
                                <i class="bi bi-check-circle me-1"></i>Active
                            </span>
                        }
                    </div>
                </div>
            </div>
            @if (Model.Account.Role == RoleType.Owner)
            {
                <div class="detail-row">
                    <div class="detail-item">
                        <span class="detail-label">Owner Approval Status</span>
                        <div class="detail-value">
                            <span class="badge badge-approved">
                                <i class="bi bi-check-circle me-1"></i>Approved
                            </span>
                        </div>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Can Manage Properties</span>
                        <div class="detail-value">
                            <span class="badge badge-approved">Yes</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Timeline -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-clock-history me-2"></i>Account Timeline</h3>
            </div>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <div class="timeline-title">Account Created</div>
                        <div class="timeline-date">@Model.Account.CreatedAt.ToString("MMMM dd, yyyy - hh:mm tt")</div>
                    </div>
                </div>
                @if (Model.Account.UpdatedAt.HasValue)
                {
                    <div class="timeline-item">
                        <div class="timeline-dot"></div>
                        <div class="timeline-content">
                            <div class="timeline-title">Last Updated</div>
                            <div class="timeline-date">@Model.Account.UpdatedAt.Value.ToString("MMMM dd, yyyy - hh:mm tt")</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Account ID Card -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-fingerprint me-2"></i>System Information</h3>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Account ID</span>
                    <div class="detail-value" style="font-family: monospace; font-size: 0.875rem;">@Model.Account.Id</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Account Age</span>
                    <div class="detail-value">
                        @{
                            var accountAge = DateTime.Now - Model.Account.CreatedAt;
                            var days = accountAge.Days;
                            if (days == 0)
                            {
                                <span>Today</span>
                            }
                            else if (days == 1)
                            {
                                <span>1 day</span>
                            }
                            else if (days < 30)
                            {
                                <span>@days days</span>
                            }
                            else if (days < 365)
                            {
                                var months = days / 30;
                                <span>@months month@(months > 1 ? "s" : "")</span>
                            }
                            else
                            {
                                var years = days / 365;
                                <span>@years year@(years > 1 ? "s" : "")</span>
                            }
                        }
                    </div>
                    <div class="detail-value-secondary">Member since @Model.Account.CreatedAt.ToString("MMM dd, yyyy")</div>
                </div>
            </div>
        </div>
    }
</div>