@page
@using Homerly.BusinessObject.Enums
@model HomerLy.Presentation.Pages.Admin.Properties.DetailsModel
@{
    ViewData["Title"] = "Property Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<style>
    /* Property Details page-specific styles */
    .detail-card {
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 24px;
        margin-bottom: 24px;
    }

    .detail-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 16px;
        border-bottom: 1px solid #e9ecef;
    }

        .detail-card-header h3 {
            font-size: 1.125rem;
            font-weight: 600;
            margin: 0;
        }

    .detail-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 16px;
    }

    .detail-item {
        padding: 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .detail-label {
        font-size: 0.8125rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .detail-value {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
    }

    .detail-value-secondary {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 4px;
    }

    .stat-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 24px;
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        height: 100%;
        min-width: 0;
    }

    .stat-card-content h3 {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        line-height: 1;
    }

    .stat-card-content p {
        font-size: 0.8125rem;
        color: #6c757d;
        margin: 4px 0 0 0;
    }

    .stat-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
        color: #1a1a1a;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .badge-available {
        background: #1a1a1a !important;
        color: #ffffff !important;
    }

    .badge-occupied {
        background: #f5f5f5 !important;
        color: #1a1a1a !important;
        border: 1px solid #e5e5e5 !important;
    }

    .badge-maintenance {
        background: #ffffff !important;
        color: #666666 !important;
        border: 1px solid #e5e5e5 !important;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .action-buttons {
        display: flex;
        gap: 12px;
    }

    .property-image-large {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }

    .property-image-placeholder {
        width: 100%;
        height: 400px;
        background: #f5f5f5;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        gap: 16px;
    }

        .property-image-placeholder i {
            font-size: 4rem;
            color: #dee2e6;
        }

        .property-image-placeholder p {
            color: #6c757d;
            margin: 0;
        }

    .owner-info-box {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .owner-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: #1a1a1a;
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .owner-details {
        flex: 1;
    }

    .owner-name {
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 4px;
    }

    .owner-contact {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .timeline {
        position: relative;
        padding-left: 32px;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e9ecef;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 24px;
    }

    .timeline-dot {
        position: absolute;
        left: -28px;
        top: 4px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: #1a1a1a;
        border: 3px solid #fff;
        box-shadow: 0 0 0 2px #e9ecef;
    }

    .timeline-content {
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .timeline-title {
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 4px;
    }

    .timeline-date {
        font-size: 0.875rem;
        color: #6c757d;
    }

    @@media (max-width: 768px) {
        .detail-row {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
            width: 100%;
        }

            .action-buttons .btn {
                width: 100%;
            }

        .property-image-large,
        .property-image-placeholder {
            height: 250px;
        }
    }
</style>

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h2 class="h4 mb-1 fw-semibold">
                <i class="bi bi-building me-2"></i>Property Details
            </h2>
            <p class="text-secondary mb-0" style="font-size: 0.875rem;">View complete property information</p>
        </div>
        <div class="action-buttons">
            <a asp-page="/Admin/Properties/Index" class="btn btn-outline-dark">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
            @if (Model.Property != null)
            {
                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Property.Id" asp-route-ownerId="@Model.Property.OwnerId" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this property? This action cannot be undone.')">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                </form>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Property == null)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-exclamation-triangle fs-1 text-secondary d-block mb-3"></i>
                <h5 class="text-secondary">Property not found</h5>
                <a asp-page="/Admin/Properties/Index" class="btn btn-dark mt-3">
                    <i class="bi bi-arrow-left me-2"></i>Go Back
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Property Image -->
        <div class="detail-card">
            @if (!string.IsNullOrEmpty(Model.Property.ImageUrl))
            {
                <img src="@Model.Property.ImageUrl" alt="@Model.Property.Title" class="property-image-large" />
            }
            else
            {
                <div class="property-image-placeholder">
                    <i class="bi bi-image"></i>
                    <p>No image available</p>
                </div>
            }
        </div>

        <!-- Statistics Cards -->
        <div class="stat-card-wrapper">
            <div class="stat-card">
                <div class="stat-card-content">
                    <h3>₫@Model.Property.MonthlyPrice.ToString("N0")</h3>
                    <p>Monthly Price</p>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-cash-stack"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-card-content">
                    <h3>@Model.Property.AreaSqm m²</h3>
                    <p>Total Area</p>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-rulers"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-card-content">
                    <h3>
                        @if (Model.Property.Status == PropertyStatus.available)
                        {
                            <span class="badge badge-available">Available</span>
                        }
                        else if (Model.Property.Status == PropertyStatus.occupied)
                        {
                            <span class="badge badge-occupied">Occupied</span>
                        }
                        else
                        {
                            <span class="badge badge-maintenance">Maintenance</span>
                        }
                    </h3>
                    <p>Status</p>
                </div>
                <div class="stat-icon">
                    <i class="bi bi-info-circle"></i>
                </div>
            </div>
        </div>

        <!-- Property Information -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-house me-2"></i>Property Information</h3>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Property Title</span>
                    <div class="detail-value">@Model.Property.Title</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Property Address</span>
                    <div class="detail-value">@Model.Property.Address</div>
                </div>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Monthly Rent</span>
                    <div class="detail-value">₫@Model.Property.MonthlyPrice.ToString("N0")</div>
                    <div class="detail-value-secondary">per month</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Area</span>
                    <div class="detail-value">@Model.Property.AreaSqm m²</div>
                </div>
            </div>
            <div class="detail-item">
                <span class="detail-label">Description</span>
                <div class="detail-value">@Model.Property.Description</div>
            </div>
        </div>

        <!-- Owner Information -->
        @if (Model.Owner != null)
        {
            <div class="detail-card">
                <div class="detail-card-header">
                    <h3><i class="bi bi-person me-2"></i>Owner Information</h3>
                </div>
                <div class="owner-info-box">
                    <div class="owner-avatar">
                        @Model.Owner.FullName?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="owner-details">
                        <div class="owner-name">@Model.Owner.FullName</div>
                        <div class="owner-contact">
                            <i class="bi bi-envelope me-1"></i>@Model.Owner.Email
                        </div>
                        <div class="owner-contact">
                            <i class="bi bi-telephone me-1"></i>@Model.Owner.Phone
                        </div>
                    </div>
                    <div>
                        <a asp-page="/Admin/Accounts/Details" asp-route-id="@Model.Owner.Id" class="btn btn-sm btn-outline-dark">
                            View Owner
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Property Status -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-info-circle me-2"></i>Status & Availability</h3>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Current Status</span>
                    <div class="detail-value">
                        @if (Model.Property.Status == PropertyStatus.available)
                        {
                            <span class="badge badge-available">
                                <i class="bi bi-check-circle me-1"></i>Available for Rent
                            </span>
                        }
                        else if (Model.Property.Status == PropertyStatus.occupied)
                        {
                            <span class="badge badge-occupied">
                                <i class="bi bi-house-fill me-1"></i>Currently Occupied
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-maintenance">
                                <i class="bi bi-tools me-1"></i>Under Maintenance
                            </span>
                        }
                    </div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Property Status</span>
                    <div class="detail-value">
                        @if (Model.Property.IsDeleted)
                        {
                            <span class="badge badge-maintenance">
                                <i class="bi bi-trash me-1"></i>Deleted
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-available">
                                <i class="bi bi-check-circle me-1"></i>Active
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-clock-history me-2"></i>Property Timeline</h3>
            </div>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-dot"></div>
                    <div class="timeline-content">
                        <div class="timeline-title">Property Created</div>
                        <div class="timeline-date">@Model.Property.CreatedAt.ToString("MMMM dd, yyyy - hh:mm tt")</div>
                    </div>
                </div>
                @if (Model.Property.UpdatedAt.HasValue)
                {
                    <div class="timeline-item">
                        <div class="timeline-dot"></div>
                        <div class="timeline-content">
                            <div class="timeline-title">Last Updated</div>
                            <div class="timeline-date">@Model.Property.UpdatedAt.Value.ToString("MMMM dd, yyyy - hh:mm tt")</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- System Information -->
        <div class="detail-card">
            <div class="detail-card-header">
                <h3><i class="bi bi-fingerprint me-2"></i>System Information</h3>
            </div>
            <div class="detail-row">
                <div class="detail-item">
                    <span class="detail-label">Property ID</span>
                    <div class="detail-value" style="font-family: monospace; font-size: 0.875rem;">@Model.Property.Id</div>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Owner ID</span>
                    <div class="detail-value" style="font-family: monospace; font-size: 0.875rem;">@Model.Property.OwnerId</div>
                </div>
            </div>
        </div>
    }
</div>